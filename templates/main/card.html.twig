{% extends 'base.html.twig' %}
{% block title %}Voiture
{% endblock %}

{% block body %}
	<div class="container">
		<h1 class="title text-center mt-4 mb-4">Annonces pour la marque :
			{{marq.name}}</h1>
		<div class="cards-container">
			<div class="cards">
				{% for annonce in marq.annonces %}
					<div class="card" style="width: 18rem;">
						<img class="card-img-top" src="{{asset('images_directory/' ~ annonce.imgfile )}}" alt="Card image cap">
						<div class="card-body">
							<h5 class="card-title">
								{{annonce.title}}
							</h5>
							<p class="card-text">
								{{annonce.description|raw}}
							</p>
							<a href="{{ path('app_annonce_show', {'id': annonce.id}) }}" class="btn btn-success">Voir en d√©tail</a>
							{% if app.user %}
								{% if annonce.isUsersFav(app.user) %}
									<a href="{{ path('app_annonce_fav', {'id': annonce.id}) }}" class="btn btn-success">
										<i class="fa-solid fa-heart"></i>
									</a>
								{% else %}
									<a href="{{ path('app_annonce_fav', {'id': annonce.id}) }}" class="btn btn-success">
										<i class="fa-regular fa-heart"></i>
									</a>
								{% endif %}
							{% endif %}
						</div>
					</div>
				{% else %}
					<tr>
						<td colspan="3">no records found</td>
					</tr>
				{% endfor %}
			</div>
		</div>
	</div>
{% endblock %}
